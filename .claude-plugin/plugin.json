{
  "name": "pipitone-claude-code",
  "version": "1.0.0",
  "description": "Joe's personal Claude Code setup with 14 productivity commands and 11 specialized AI agents for modern web development",
  "author": {
    "name": "Joe"
  },
  "license": "MIT",
  "commands": "./.claude/commands/",
  "agents": [
    "./.claude/agents/backend-architect.md",
    "./.claude/agents/deep-research-agent.md",
    "./.claude/agents/frontend-architect.md",
    "./.claude/agents/learning-guide.md",
    "./.claude/agents/performance-engineer.md",
    "./.claude/agents/refactoring-expert.md",
    "./.claude/agents/requirements-analyst.md",
    "./.claude/agents/security-engineer.md",
    "./.claude/agents/system-architect.md",
    "./.claude/agents/tech-stack-researcher.md",
    "./.claude/agents/technical-writer.md"
  ],
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Access up-to-date documentation for any library",
      "env": {
        "UPSTASH_API_KEY": "${UPSTASH_API_KEY}"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "Browser automation and web testing capabilities"
    },
    "supabase": {
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server-supabase"],
      "description": "Supabase database operations and management",
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_API_KEY": "${SUPABASE_API_KEY}"
      }
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "mcp-vercel"],
      "description": "Manage Vercel deployments, projects, and environment variables",
      "env": {
        "VERCEL_API_TOKEN": "${VERCEL_API_TOKEN}"
      }
    }
  },
  "keywords": [
    "productivity",
    "nextjs",
    "supabase",
    "typescript",
    "react",
    "api",
    "development",
    "mcp"
  ]
}