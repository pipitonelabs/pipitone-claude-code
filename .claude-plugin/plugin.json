{
  "name": "pipitone-claude-code",
  "version": "1.0.5",
  "description": "Joe's personal Claude Code setup with 14 productivity commands and 20 specialized AI agents for modern web development",
  "author": {
    "name": "Joe"
  },
  "license": "MIT",
  "commands": "./.claude/commands/",
  "agents": "./.claude/agents/*.md",
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "${CONTEXT7_API_KEY}"],
      "description": "Access up-to-date documentation for any library"
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "Browser automation and web testing capabilities"
    },
    "supabase": {
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server-supabase@latest", "--access-token", "${SUPABASE_ACCESS_TOKEN}"],
      "description": "Supabase database operations and management"
    },
    "shadcn": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://www.shadcn.io/api/mcp"]
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "@robinson_ai_systems/vercel-mcp"],
      "description": "Manage Vercel deployments, projects, and environment variables",
      "env": {
        "VERCEL_TOKEN": "${VERCEL_TOKEN}"
      }
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"],
      "description": "Chrome devtools"
    }
  },
  "keywords": [
    "productivity",
    "nextjs",
    "supabase",
    "typescript",
    "react",
    "vite",
    "vercel",
    "shadcn",
    "api",
    "development",
    "mcp"
  ]
}