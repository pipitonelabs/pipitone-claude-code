{
  "name": "pipitone-claude-code",
  "version": "1.0.2",
  "description": "Joe's personal Claude Code setup with 14 productivity commands and 20 specialized AI agents for modern web development",
  "author": {
    "name": "Joe"
  },
  "license": "MIT",
  "commands": "./.claude/commands/",
  "agents": [
    "./.claude/agents/apply-thinking-to.md",
    "./.claude/agents/backend-architect.md",
    "./.claude/agents/batch-operations-prompt.md",
    "./.claude/agents/cc-usage.md",
    "./.claude/agents/cleanup-context.md",
    "./.claude/agents/create-readme-section.md",
    "./.claude/agents/create-release-note.md",
    "./.claude/agents/convert-to-test-driven-prompt.md",
    "./.claude/agents/deep-research-agent.md",
    "./.claude/agents/frontend-architect.md",
    "./.claude/agents/learning-guide.md",
    "./.claude/agents/memory-bank-synchronizer.md",
    "./.claude/agents/performance-engineer.md",
    "./.claude/agents/refactoring-expert.md",
    "./.claude/agents/requirements-analyst.md",
    "./.claude/agents/security-engineer.md",
    "./.claude/agents/system-architect.md",
    "./.claude/agents/tech-stack-researcher.md",
    "./.claude/agents/technical-writer.md",
    "./.claude/agents/update-memory-bank.md"
  ],
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "${CONTEXT7_API_KEY}"],
      "description": "Access up-to-date documentation for any library"
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "Browser automation and web testing capabilities"
    },
    "supabase": {
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server-supabase@latest", "--access-token", "${SUPABASE_ACCESS_TOKEN}"],
      "description": "Supabase database operations and management"
    },
    "shadcn": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://www.shadcn.io/api/mcp"]
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "@robinson_ai_systems/vercel-mcp"],
      "description": "Manage Vercel deployments, projects, and environment variables",
      "env": {
        "VERCEL_TOKEN": "${VERCEL_TOKEN}"
      }
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"],
      "description": "Chrome devtools"
    }
  },
  "keywords": [
    "productivity",
    "nextjs",
    "supabase",
    "typescript",
    "react",
    "vite",
    "vercel",
    "shadcn",
    "api",
    "development",
    "mcp"
  ]
}